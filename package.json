{
  "name": "react-element-size-reporter",
  "version": "0.3.0",
  "description": "Higher order React components to report contained DOM element sizes",
  "main": "lib",
  "scripts": {
    "test": "npm run lint && mocha src/tests/unit --recursive --reporter spec --compilers js:babel-register",
    "test:debug": "rimraf output/ && babel ./src -d output -s inline && mocha output/tests/unit --recursive --reporter spec --debug-brk",
    "test:cover": "rimraf .nyc_output/ && cross-env BABEL_ENV=cover NYC_CWD=src nyc --reporter=lcov npm test",
    "build": "npm test && babel src/lib/ -d lib/",
    "lint": "eslint .",
    "prepublish": "npm run build",
    "validate": "npm ls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/localnerve/react-element-size-reporter.git"
  },
  "keywords": [
    "react",
    "fluxible",
    "size",
    "position",
    "width",
    "height",
    "top",
    "resize",
    "cloudinary"
  ],
  "author": "Alex Grant (@localnerve)",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/localnerve/react-element-size-reporter/issues"
  },
  "homepage": "https://github.com/localnerve/react-element-size-reporter#readme",
  "nyc": {
    "instrument": false,
    "sourceMap": false,
    "report-dir": "coverage"
  },
  "pre-commit": [
    "test"
  ],
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-eslint": "^7.0.0",
    "babel-plugin-istanbul": "^4.0.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-register": "^6.11.6",
    "chai": "^3.5.0",
    "coveralls": "^2.11.12",
    "cross-env": "^4.0.0",
    "eslint": "^3.9.1",
    "eslint-plugin-react": "^6.0.0",
    "fluxible": "^1.2.0",
    "fluxible-addons-react": "^0.2.10",
    "jsdom": "^9.4.1",
    "mocha": "^3.0.0",
    "mockery": "^2.0.0",
    "nyc": "^10.0.0",
    "precommit-hook": "^3.0.0",
    "react-dom": "^15.5.0",
    "rimraf": "^2.5.4"
  },
  "dependencies": {
    "inherits": "^2.0.1",
    "lodash": "^4.13.1",
    "react": "^15.5.0",
    "prop-types": "^15.5.0",
    "element-size-reporter": "^0.3.15"
  },
  "engines": {
    "node": ">= 4"
  }
}
